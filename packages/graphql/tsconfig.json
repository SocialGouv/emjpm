{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    // "jsx": "preserve",
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  },
  "files": ["./src/index.ts"]
}
